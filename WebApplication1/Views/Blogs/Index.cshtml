@model IEnumerable<WebApplication1.Models.Blog>

@{
    ViewData["Title"] = "lista de Blogs";
}

<h1>@ViewData["Title"] </h1>

<p>
    <a asp-action="Create">Incluir Novo Blog</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class=" btn btn-warning">Detalhe</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Apagar</a> 
            </td>
        </tr>
}
    </tbody>
</table>
